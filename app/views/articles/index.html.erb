<div class = "navbar">
  <%= link_to "Wikinimous", articles_path, class: "wikinimous" %>

  <%= link_to "New Article", new_article_path, class: "new-article" %>
</div>
<div class = "container">
  <% @articles.each do |article| %>
    <div class = "article">
      <%= link_to article_path(article) do %>
        <h1 class = "title">
          <%= article.title %>
        </h1>
        <p class = "article-content">
          <%= article.content %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
