<div class="container">
  <div class = "article-header">
    <h1><%=@article.title%></h1>
    <%= link_to edit_article_path(@article) do%>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
    <%= link_to article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "trash" do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </div>
   <p><%=@article.content%></p>
</div>
